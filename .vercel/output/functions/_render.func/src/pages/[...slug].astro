---
import { Head } from "@/components/Head";
import AppRouter from "@/components/Router";
import "@/styles/global.css";

export const prerender = false;
---

<html lang="en" class="w-full h-full">
  <head>
    <Head />
    
    <!-- Standard SEO Meta Tags -->
    <meta name="theme-color" content="#0f0f0f" />
    <meta name="description" content="A modern, fast portfolio built with Astro and React." />
    <meta property="og:title" content="Portfolio | Luxe Lookbook" />
    <meta property="og:description" content="Explore a curated collection of fashion design projects and creative work." />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Luxe Lookbook" />
  </head>

  <body class="w-full h-full bg-black text-white">
    <noscript class="p-4 text-center text-sm opacity-70">
      JavaScript is disabled — the interactive sections of this site won’t load.
    </noscript>

    <main id="root" class="w-full h-full opacity-0 animate-fadeIn">
      <AppRouter client:only="react" />
    </main>
  </body>
</html>
